RewriteEngine On
RewriteBase /systicket_php/

# Ne pas réécrire les fichiers existants (CSS, JS, images, assets)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Ne pas réécrire les dossiers existants
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Tout le reste passe par index.php (y compris les API)
RewriteRule ^(.*)$ index.php [L,QSA]
